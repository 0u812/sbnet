#!/usr/bin/python

from distutils import sysconfig
from distutils.core import setup, Extension
from sys import version_info
PYTHON_MAJ_VER = version_info.major

def TestCMakeBool(x):
    return x.lower() == 'on'

libs = []
libDirs = []

# Account for libSBML
sbmlLibs = '@LIBSBML_LIBS@'.split(';')
libs += sbmlLibs
libDirs.append('@LIBSBML_LIBDIR@')

# Account for libxml2
if TestCMakeBool('@GRAPHFAB_WINDOWS_BUILD@'):
    libDirs.append('@LIBXML2_LIBDIR@')

if '@LINK_WITH_MAGICK@'.lower() == 'on':
    magickLibs = '@MAGICK_LIBS@'.split(';')
    libs += magickLibs
    libDirs.append('@MAGICK_LIBDIR@')

sources = []
#sources = [x.strip() for x in '@GRAPHFAB_SOURCES@'.split(';') if len(x.strip())]
    
print('sources = {}'.format(sources))

defines = [('PYTHON_DIST',),
                 ('PYTHON_API_VER', str(PYTHON_MAJ_VER)),
                 ('PYTHON_SCREWED_IT_UP', 1)]
 
if TestCMakeBool('@GRAPHFAB_WINDOWS_BUILD@'):
    if TestCMakeBool('@GRAPHFAB_MINGW@'):
        libprefix = 'lib'
        defines.append( ('NTDDI_VERSION', '@GRAPHFAB_NTDDI_VERSION@') )
    else:
        libprefix = ''
    
    deps = [x.replace('/', '\\') for x in [r'@CMAKE_INSTALL_PREFIX@/bin/{}graphfab.dll'.format(libprefix), r'@CMAKE_INSTALL_PREFIX@/bin/libsbml.dll']]
    print('gf dll: ' + deps[0])
    
             
if TestCMakeBool('@ENABLE_PYTHON_BINDINGS@'):
    module1 = Extension('graphfab',
                    define_macros = defines,
                    #include_dirs = ['/usr/local/include'],
                    include_dirs = ['..'],
                    libraries = libs + ['graphfab'],
                    library_dirs = libDirs + [r'@CMAKE_INSTALL_PREFIX@/lib'],
                    sources = sources + ['python/graphfabmodule.c'])
print('sysconfig.get_python_lib() = ' + repr(sysconfig.get_python_lib()))

if TestCMakeBool('@GRAPHFAB_WINDOWS_BUILD@'):
    setup (name = 'Graphfab',
           version = '@GRAPHFAB_MAJOR_VER@.@GRAPHFAB_MINOR_VER@.@GRAPHFAB_PATCHLEVEL@',
           description = 'Graph layout library',
           author = 'J Medley',
           author_email = 'medleyj@uw.edu',
           url = 'http://code.google.com/p/graphfab/',
           #ext_package = 'graphfab',
           packages = ['graphfab'],
           package_dir = {'graphfab': ''},
           # Does not work:
           # package_data = {'graphfab': deps},
           # http://stackoverflow.com/questions/2822424/python-copy-a-dll-to-site-packages-on-windows
           data_files = [(sysconfig.get_python_lib(), deps)],
           long_description = '''
    Graph layout library for SBML.
    ''',
           ext_modules = [module1])
else:
    setup (name = 'Graphfab',
           version = '@GRAPHFAB_MAJOR_VER@.@GRAPHFAB_MINOR_VER@.@GRAPHFAB_PATCHLEVEL@',
           description = 'Graph layout library',
           author = 'J Medley',
           author_email = 'medleyj@uw.edu',
           url = 'http://code.google.com/p/graphfab/',
           long_description = '''
    Graph layout library for SBML.
    ''',
           ext_modules = [module1])